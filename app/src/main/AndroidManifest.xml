<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.april.library">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <dist:module dist:instant="true" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TextCreatorActivity"
            android:label="TextCreator" />
        <activity
            android:name=".APermissionActivity"
            android:label="APermission" />
        <activity
            android:name=".TextLengthWatcherActivity"
            android:label="TextLengthWatcher" />
        <activity
            android:name=".MultipleItemActivity"
            android:label="MultipleItem" />
        <activity android:name=".BannerActivity" />
        <activity
            android:name=".navigation.NavTestActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>