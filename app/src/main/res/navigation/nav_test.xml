<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_test"
    app:startDestination="@id/fragment_splash">

    <!--    这个行为属于全局行为，当前 navigation 标签下的所有 fragment 标签都能使用这个行为     -->
    <action
        android:id="@+id/action_go_home"
        app:destination="@+id/fragment_home" />

    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.april.library.navigation.NavSplashFragment"
        android:label="启动页"
        tools:layout="@layout/nav_fragment_splash">

        <action
            android:id="@+id/action_splash_go_login"
            app:destination="@id/fragment_login" />

    </fragment>

    <fragment
        android:id="@+id/fragment_login"
        android:name="com.april.library.navigation.NavLoginFragment"
        android:label="登录页"
        tools:layout="@layout/nav_fragment_login">

        <action
            android:id="@+id/action_login_go_register"
            app:destination="@id/fragment_register" />

    </fragment>

    <fragment
        android:id="@+id/fragment_register"
        android:name="com.april.library.navigation.NavRegisterFragment"
        android:label="注册页"
        tools:layout="@layout/nav_fragment_register">

        <argument
            android:name="registerPhone"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.april.library.navigation.NavHomeFragment"
        android:label="首页"
        tools:layout="@layout/nav_fragment_home">

    </fragment>

</navigation>